@model Webbanhangonline.Models.EF.SanPham
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/assests/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assests/styles/single_responsive.css">
<style>
    .custom-font {
        font-family: 'Slide03 SVNKelson Sans', sans-serif;
        /* Thêm các thuộc tính CSS khác nếu cần thiết */
    }

    .custom_button {
        background-color: blue;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
    }

    .buy-button {
        display: inline-block;
        background-color: red;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        align-content: center;
    }

        .buy-button a {
            text-decoration: none;
            color: white;
        }
</style>

@if (Model != null)
{
    <div class="container single_product_container">
        <div class="row">
            <div class="col">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        @*<li><a href="index.html">Home</a></li>
                            <li><a href="categories.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Men's</a></li>
                            <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Single Product</a></li>*@
                    </ul>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-7">
                <div class="single_product_image_background" style="background-image: url('@Model.HinhAnh');"></div>
                <div class="product_image">
                    <img src="@Model.HinhAnh" alt="@Model.TenSP">
                </div>
                <!--if (Model.ProductImage != null && Model.ProductImage.Any())
    {
        <div class="single_product_pics">
            <div class="row">
                <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                    <div class="single_product_thumbnails">
                        <ul>
                            foreach (var item in Model.ProductImage)
                            {
                                <li class="(item == Model.HinhAnh.First() ? "active" : "")">
                                    <img src="item.HinhAnh" alt="" data-image="item.HinhAnh">
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9 image_col order-lg-2 order-1">
                    <div class="single_product_image">-->
                @*<div class="single_product_image_background" style="background-image: url(@Model.HinhAnh.First().Image) "></div>*@
                <!--</div>
                </div>
            </div>
        </div>
    }-->
            </div>
            <div class="col-lg-5">
                <div class="product_details">
                    <div class="product_details_title">
                        <h2 class="custom-font" style="text-align: center;">@Model.TenSP</h2>
                    </div>
                    <div class="product_details_title">
                        <br />
                        <p class="custom-font" style="text-align: justify-all;">@Model.MoTa</p>
                    </div>
                    <div class="product_details_title">
                        <br />
                        <p class="custom-font" style="text-align: justify-all;">Lượt xem: <b>@*@Model.ViewCount*@10</b></p>
                    </div>
                    <div class="free_delivery d-flex flex-row align-items-center justify-content-center">
                        <span class="ti-truck"></span><span>Miễn phí vận chuyển</span>
                    </div>
                    @if (Model.GiaKM > 0)
                    {
                        <div class="original_price"><br />@Webbanhangonline.Common.Common.FormatNumber(Model.GiaKM, 0)</div>
                        <div class="product_price"><br />@Webbanhangonline.Common.Common.FormatNumber(Model.GiaBan, 0)</div>

                    }
                    else
                    {
                        <div class="product_price"><br />@Webbanhangonline.Common.Common.FormatNumber(Model.GiaBan, 0)</div>

                    }
                    <ul class="star_rating">
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star" aria-hidden="true"></i></li>
                        <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                    </ul>
                    <div class="quantity d-flex flex-column flex-sm-row align-items-sm-center">
                        <span>Quantity:</span>
                        <div class="quantity_selector">
                            <span class="minus"><i class="fa fa-minus" aria-hidden="true"></i></span>
                            <span id="quantity_value">1</span>
                            <span class="plus"><i class="fa fa-plus" aria-hidden="true"></i></span>
                        </div>
                        <div class="product_favorite d-flex flex-column align-items-center justify-content-center"></div>
                    </div>
                    <br />
                    <div class="buy-button">
                        <a href="#" class="btnAddtoCart" data-id="@Model.MaSP">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="tabs_section_container">

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="tabs_container">
                        <ul class="tabs d-flex flex-sm-row flex-column align-items-left align-items-md-center justify-content-center">
                            <li class="tab active" data-active-tab="tab_1"><span>Description</span></li>
                            <li class="tab" data-active-tab="tab_2"><span>Additional Information</span></li>
                            <li class="tab" data-active-tab="tab_3"><span>Reviews</span></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">

                    <!-- Tab Description -->

                    <div id="tab_1" class="tab_container active">
                        <div class="row">
                            @Html.Raw(Model.ChiTiet)
                        </div>
                    </div>

                    <!-- Tab Additional Info -->

                    <div id="tab_2" class="tab_container">
                        <div class="row">
                            <div class="col additional_info_col">
                                <div class="tab_title additional_info_title">
                                    <h4>Additional Information</h4>
                                </div>
                                <p>SIZE:<span>S,M,L</span></p>
                            </div>
                        </div>
                    </div>

                    <!-- Tab Reviews -->

                    <div id="tab_3" class="tab_container">
                        <div class="row">

                            <!-- User Reviews -->

                            <div class="col-lg-6 reviews_col">
                                <div class="tab_title reviews_title">
                                    <h4>Reviews</h4>
                                </div>

                                <!-- User Review -->

                                <div class="user_review_container d-flex flex-column flex-sm-row">
                                    <div class="user">
                                        <div class="user_pic"></div>
                                        <div class="user_rating">
                                            <ul class="star_rating">
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="review">
                                        <div class="review_date">24 Dec 2023</div>
                                        <div class="user_name">Nam Phan</div>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                    </div>
                                </div>

                                <!-- User Review -->

                                <div class="user_review_container d-flex flex-column flex-sm-row">
                                    <div class="user">
                                        <div class="user_pic"></div>
                                        <div class="user_rating">
                                            <ul class="star_rating">
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="review">
                                        <div class="review_date">24 Dec 2023</div>
                                        <div class="user_name">Bảo Ngô</div>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Add Review -->

                            <div class="col-lg-6 add_review_col">

                                <div class="add_review">
                                    <form id="review_form" action="post">
                                        <div>
                                            <h1>Add Review</h1>
                                            <input id="review_name" class="form_input input_name" type="text" name="name" placeholder="Name*" required="required" data-error="Name is required.">
                                            <input id="review_email" class="form_input input_email" type="email" name="email" placeholder="Email*" required="required" data-error="Valid email is required.">
                                        </div>
                                        <div>
                                            <h1>Your Rating:</h1>
                                            <ul class="user_star_rating">
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                                            </ul>
                                            <textarea id="review_message" class="input_review" name="message" placeholder="Your Review" rows="4" required data-error="Please, leave us a review."></textarea>
                                        </div>
                                        <div class="text-left text-sm-right">
                                            <button id="review_submit" type="submit" class="red_button review_submit_btn trans_300" value="Submit">submit</button>
                                        </div>
                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

}
else
{
    <p>No data available.</p>
}
@section scripts{
    <script src="~/Content/assests/js/single_custom.js"></script>
    <script>
        $(document).ready(function () {
            $('.slider').slick({
                // Customize the slider options as needed
                infinite: true,
                slidesToShow: 3, // Number of slides to show at a time
                slidesToScroll: 1, // Number of slides to scroll
                autoplay: true, // Auto-play the slider
                autoplaySpeed: 3000, // Auto-play interval in milliseconds
                dots: true, // Show navigation dots
            });
        });
    </script>
}
