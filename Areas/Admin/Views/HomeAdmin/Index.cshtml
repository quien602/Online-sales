
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Welcome, @ViewBag.Username!</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Trang chủ</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Title</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@ViewBag.TotalOrdersCount</h3>
                            <p>Đơn hàng</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="/admin/order" class="small-box-footer">Chi tiết đơn hàng <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@ViewBag.TotalRevenue<sup style="font-size: 20px">VND</sup></h3>
                            <p>Doanh thu</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/Admin/Statistical" class="small-box-footer">Chi tiết đơn hàng <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@Html.Raw(ViewBag.TotalProfit)<sup style="font-size: 20px">VND</sup></h3>
                            <p>Lợi nhuận</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="/Admin/Statistical" class="small-box-footer">Chi tiết đơn hàng <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">
                    <canvas id="orderChart"></canvas>
                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var ctx = document.getElementById('orderChart').getContext('2d');

            var data = {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6', 'Tháng 7', 'Tháng 8', 'Tháng 9', 'Tháng 10', 'Tháng 11', 'Tháng 12'],
                datasets: [{
                    label: 'Số lượng đơn hàng',
                    data: [
                        @ViewBag.OrderCountJanuary,
                        @ViewBag.OrderCountFebruary,
                        @ViewBag.OrderCountMarch,
                        @ViewBag.OrderCountApril,
                        @ViewBag.OrderCountMay,
                        @ViewBag.OrderCountJune,
                        @ViewBag.OrderCountJuly,
                        @ViewBag.OrderCountAugust,
                        @ViewBag.OrderCountSeptember,
                        @ViewBag.OrderCountOctober,
                        @ViewBag.OrderCountNovember,
                        @ViewBag.OrderCountDecember
                    ],
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            };

            var options = {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            };

            var myChart = new Chart(ctx, {
                type: 'bar',
                data: data,
                options: options
            });
        });
                    </script>

                </div>
                <div class="col-sm-6">
                    <div class="chart">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas id="lineChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block;" width="531" height="312" class="chartjs-render-monitor"></canvas>
                    </div>
                </div>
            </div>


        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="small-box bg-body">
                        <div class="inner">
                            <h3>@ViewBag.TotalCategoryCount</h3>
                            <p>Số lượng danh mục sản phẩm</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-bag"></i>
                        </div>
                        <a href="/admin/productcategory" class="small-box-footer">Danh mục sản phẩm <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                    <div class="small-box bg-gradient-primary">
                        <div class="inner">
                            <h3>@ViewBag.TotalProductsCount</h3>
                            <p>Số lượng sản phẩm</p>
                        </div>
                        <div class="icon">
                            <i class="fas fa-coffee"></i>
                        </div>
                        <a href="/admin/products" class="small-box-footer">Chi tiết sản phẩm <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="card card-columns">
                        <div class="card-header">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <div class="chartjs-size-monitor">
                            <div class="chartjs-size-monitor-expand"><div class=""></div></div>
                            <div class="chartjs-size-monitor-shrink"><div class=""></div></div>
                        </div>
                        <canvas id="categoryChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 425px;" class="chartjs-render-monitor"></canvas>
                        <!-- /.card-body -->
                    </div>
                    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                    <script>
    $(document).ready(function () {
        // Function to generate random colors
        function getRandomColor() {
            var letters = '0123456789ABCDEF';
            var color = '#';
            for (var i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        // Get category names and counts from ViewBag
        var categoryNames = @Html.Raw(Json.Encode(ViewBag.CategoryCounts.Keys));
        var categoryCounts = @Html.Raw(Json.Encode(ViewBag.CategoryCounts.Values));

        // Generate random colors for each category
        var backgroundColors = categoryNames.map(function () {
            return getRandomColor();
        });

        // Create the categoryData object
        var categoryData = {
            labels: categoryNames,
            datasets: [{
                data: categoryCounts,
                backgroundColor: backgroundColors,
            }]
        };

        // Set up the chart
        var categoryChartCanvas = $('#categoryChart').get(0).getContext('2d');
        var categoryOptions = {
            maintainAspectRatio: false,
            responsive: true,
        };

        // Create the chart
        new Chart(categoryChartCanvas, {
            type: 'pie',
            data: categoryData,
            options: categoryOptions
        });
    });
                    </script>




                </div>

                <div class="col-md-4">
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h4>Top 3 sản phẩm bán chạy</h4>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach ((string Title, int SoldQuantity) product in ViewBag.TopSellingProducts)
                                    {
                                        <tr>
                                            <td>@product.Title</td>
                                            <td>@product.SoldQuantity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="icon">
                            <i class="ion ion-stats-bars"></i>
                        </div>
                        <a href="#" class="small-box-footer">Chi tiết đơn hàng <i class="fas fa-arrow-circle-right"></i></a>
                    </div>
                </div>

            </div>

        </div>

        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
