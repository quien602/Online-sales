            $.ajax({
                url: '/Statistical/GetStatistical',
                type: 'GET',
                data: { fromDate: '', toDate: '' },
                success: function (rs) {
                    console.log(rs); // Check the response

                    var arrDate = [];
                    var arrDoanhThu = [];
                    var arrLoiNhuan = [];
                    $.each(rs.Date, function (i, item) {
                        var strDate = moment(item.Date).format('DD/MM/yyyy');
