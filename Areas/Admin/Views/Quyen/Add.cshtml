@model Webbanhangonline.Models.EF.Quyen

@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">

        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/HomeAdmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/DQuyen" class="nav-link">Quyền</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới quyền</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Quyền</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới</h3>


        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add", "Quyen", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="MaQuyen">Mã quyền</label>
                            @Html.TextBoxFor(x => x.MaQuyen, new { @class = "form-control", @placeholder = "Mã quyền", id = "MaQuyen" })
                            @Html.ValidationMessageFor(x => x.MaQuyen, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="TenQuyen">Tên quyền</label>
                            @Html.TextBoxFor(x => x.TenQuyen, new { @class = "form-control", @placeholder = "Tên quyền", id = "TenQuyen" })
                            @Html.ValidationMessageFor(x => x.TenQuyen, "", new { @class = "text-danger" })
                        </div>
                        <!-- Add other form fields as needed -->

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }

                @*<div class="form-group">
                        <a href="/Areas/DanhMuc" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>*@
            </div>


        </div>
    </div>

    <!-- /.card-body -->
    <div class="card-footer">
    </div>
    <!-- /.card-footer-->
    <!-- /.card -->

</section>
<!-- /.content -->
