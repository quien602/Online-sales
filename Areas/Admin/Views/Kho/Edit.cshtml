@model Webbanhangonline.Models.EF.Kho

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/HomeAdmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Kho" class="nav-link">Danh mục</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Cập nhật</a>
        </li>
    </ul>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật kho</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Kho</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin</h3>


        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Edit", "Kho", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(x => x.MaKho)
                    <div id="logins-part" class="content" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="MaKho">Mã kho</label>
                            @Html.TextBoxFor(x => x.MaKho, new { @class = "form-control", @placeholder = "Mã kho", id = "MaKho" })
                            @Html.ValidationMessageFor(x => x.MaKho, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="TenKho">Tên kho</label>
                            @Html.TextBoxFor(x => x.TenKho, new { @class = "form-control", @placeholder = "Tên kho", id = "TenKho" })
                            @Html.ValidationMessageFor(x => x.TenKho, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="Diachi">Địa chỉ</label>
                            @Html.TextAreaFor(x => x.Diachi, new { @class = "form-control", id = "Diachi" })
                        </div>

                        <!-- Add other form fields as needed -->

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
    <!-- /.card-footer-->
    <!-- /.card -->

</section>
<!-- /.content -->
