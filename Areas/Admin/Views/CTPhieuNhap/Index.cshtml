@model IEnumerable<Webbanhangonline.Models.EF.CTPhieuNhap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý danh mục</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        @*<li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="/admin" role="button"><i class="fas fa-bars"></i></a>
            </li>*@
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/HomeAdmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Danhmuc" class="nav-link">Danh mục</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách danh mục</h3>
            <div class="card-tools">
                <a href="/Admin/Danhmuc/add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã danh mục</th>
                        <th>Tên danh mục</th>
                        <th>Thứ tự</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr id="trow_@item.MaPN">
                                <td>@item.MaPN</td>
                                <td>@item.MaSP</td>
                                <td>@item.SoLuong</td>
                                <td>
                                    <a href="@Url.Action("Edit", "DANHMUC", new { MaDM = item.MaPN })" class="btn btn-sm btn-primary">Sửa</a>
                                    <a href="#" class="btn btn-sm btn-danger btnDelete" data-id="@item.MaPN">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnDelete', function () {
                var MaDM = $(this).data("id"); // Retrieve MaDM from data-id attribute
                var conf = confirm('Bạn có muốn xóa bản ghi này không');
                if (conf === true) {
                    $.ajax({
                        url: '/Admin/Danhmuc/Delete', // Correct URL to match the controller action
                        type: 'POST',
                        data: { MaDM: MaDM }, // Send MaDM as data
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + MaDM).remove(); // Remove the corresponding row
                            } else {
                                alert('Xóa không thành công'); // Show error message if deletion fails
                            }
                        },
                        error: function () {
                            alert('Đã xảy ra lỗi'); // Show error message if AJAX request fails
                        }
                    })
                }
            });
        });
    </script>
}

