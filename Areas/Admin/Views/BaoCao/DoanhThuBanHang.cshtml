@model IEnumerable<Webbanhangonline.Models.EF.DoanhThuBanHangViewModel>

@{
    ViewBag.Title = "DoanhThuBanHang";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .table thead th {
        position: sticky;
        top: 0;
        z-index: 10;
        background-color: white; /* Ensure the background color matches the table */
    }

    .table-wrapper {
        max-height: 600px;
        overflow-y: auto;
    }

    .table-container {
        overflow-x: auto;
    }
</style>
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        @*<li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="/admin" role="button"><i class="fas fa-bars"></i></a>
            </li>*@
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/HomeAdmin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/BaoCao/DoanhThuBanHang" class="nav-link">Báo cáo doanh thu hàng bán</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Báo cáo doanh thu hàng bán</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Báo cáo doanh thu hàng bán</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="card">
        <br />
        <div class="card-body">
            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="table-container">
                    <div style="max-height: 600px; overflow-y: auto;">
                        <table id="salesRevenueTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Số lượng bán</th>
                                    <th>Doanh thu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaSP</td>
                                        <td>@item.TenSP</td>
                                        <td>@item.SoLuongBan</td>
                                        <td>@item.DoanhThu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <form method="post" action="@Url.Action("XuatExcelDoanhThu", "BaoCao")">
                <button type="submit" class="btn btn-block btn-info btn-sm">Excel</button>
            </form>
        </div>
        <br />
    </div>
</section>