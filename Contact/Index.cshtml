<script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>

<script>
    function initMap() {
        // Tạo một đối tượng bản đồ
        var map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: YOUR_LATITUDE, lng: YOUR_LONGITUDE }, // Thay YOUR_LATITUDE và YOUR_LONGITUDE bằng tọa độ vị trí bạn muốn hiển thị
            zoom: 14 // Thay đổi mức độ phóng to (zoom) theo ý muốn
        });

        // Tạo đánh dấu (marker) nếu cần
        var marker = new google.maps.Marker({
            position: { lat: YOUR_LATITUDE, lng: YOUR_LONGITUDE },
            map: map,
            title: 'Địa điểm của bạn'
        });
    }
</script>
