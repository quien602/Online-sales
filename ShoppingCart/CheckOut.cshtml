
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<style>
    .sidebar_title h5 {
        font-family: Arial, sans-serif; /* Thay đổi font chữ theo ý muốn của bạn */
        text-align: center; /* Căn giữa văn bản */
        font-weight: bold; /* In đậm chữ */
        font-size: 5000pt; /* Đặt kích thước font chữ là 6pt */
        line-height: 20pt; /* Đặt khoảng cách giãn dòng là 6pt */
        /*border-bottom: 10px solid #ff6a00;*/ /* Tạo thanh ngang 1px với màu đen (#000) */
        /*padding-bottom: 70px;*/
    }
</style>
<link rel="stylesheet" type="text/css" href="~/Content/assests/styles/categories_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assests/styles/categories_responsive.css">
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->

            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="index.html">Home</a></li>
                    <li class="active"><a href="index.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Thanh toán</a></li>
                </ul>
            </div>

            <!-- Sidebar -->
            <!-- Main Content -->
            <div class="row">
                <div class="col-md-12 test-center">
                    <h1 class="text-center">Thanh toán</h1>
                    <p class="text-center">Thông tin thanh toán nì :3</p>
                </div>
            </div>
            <br />
            @if (ViewBag.CheckCart != null)
            {
                <div class="row">
                    <div class="show_success"></div>
                    <div class="col-md-9">
                        @Html.Action("Partial_CheckOut", "ShoppingCart")

                    </div>
                    <div class="col-md-3">
                        @Html.Action("Partial_Item_ThanhToan", "ShoppingCart");
                    </div>
                </div>
            }
            else
            {
                <div>
                    Bạn chưa có sản phẩm! Vui lòng quay lại trang <a href="/san-pham/">sản phẩm</a> để mua hàng
                </div>
            }
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Content/assests/js/categories_custom.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script>
        function OnSuccessCO(rs) {
            if (rs.Success) {
                $(#show_success).html("Bạn mua hàng thành công");
            }
        }
        $(document).ready(function () {
            $('#myForm').validate({
                rules: {
                    'CustomerName': {
                        required: true
                    },
                    'Phone': {
                        required: true
                    },
                    'Address': {
                        required: true
                    },
                    'Email': {
                        required: true,
                        email: true
                    }
                },
                messages: {
                    'CustomerName': 'Bạn không được để trống trường này',
                    'Phone': 'Bạn không được để trống trường này',
                    'Address': 'Bạn không được để trống trường này',
                    'Email': 'Bạn không được để trống trường này'
                }
            });
        });

    </script>
}

