@model IEnumerable<Webbanhangonline.Models.EF.TINTUC>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="col text-center">
            <div class="section_title">
                <h2>Latest Blogs</h2>
            </div>
        </div>
    </div>

    <div class="row blogs_container">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 blog_item_col">
                <div class="blog_item">
                    <div class="blog_background" style="background-image:url(@item.HinhDD)"></div>
                    <div class="blog_content d-flex flex-column align-items-center justify-content-center text-center">
                        <h4 class="blog_title">@item.TenTin</h4>
                        <span class="blog_meta">by admin | July 03, 2024</span>
                        <a class="blog_more" href="/News/@item.Alias">Read more</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
